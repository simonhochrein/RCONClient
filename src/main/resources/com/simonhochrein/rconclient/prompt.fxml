<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.simonhochrein.rconclient.PromptController">
    <TextArea fx:id="console" editable="false" prefHeight="400.0" prefWidth="600.0" VBox.vgrow="ALWAYS"/>
    <HBox alignment="BASELINE_LEFT" prefHeight="16.0" prefWidth="600.0" VBox.vgrow="NEVER">
        <TextField fx:id="input" onAction="#send" HBox.hgrow="ALWAYS"/>
        <Button mnemonicParsing="false" onAction="#send" text="Send"/>
    </HBox>
</VBox>
